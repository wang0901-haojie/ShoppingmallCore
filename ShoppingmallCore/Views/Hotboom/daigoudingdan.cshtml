        function ShowdaigoudingdanCX() {
            var name = $("#name").val();
            var id = $("#id").val();
            $.ajax({
                url: "http://localhost:59152/api/Showdaigou",
                data: { name: name, id: id },
                type: "get",
                contentType: 'application/json',
                success: function (d) {
                    $("#tb").empty();
                    $(d).each(function () {
                        var str = '<tr><td>' + this.revoID + '</td><td>' + this.revoLink + '</td><td>' + this.revoContent + '</td><td>' + this.revoPrice + '</td><td>' + this.revoNum + '</td><td>' + (this.revoPrice * this.revoNum) + '</td><td>' + this.internHome + '</td><td>' + this.name + '</td><td><a onclick="deledg(' + this.revoID + ')">删除订单</a></td></tr>';
                        $("#tb").append(str);
                    })
                }
            })
        }
    }

    function deledg(id) {
        $.ajax({
            url: "http://localhost:59152/api/DeleDaigou",
            data: { id: id },
            type: "get",
            contentType: 'application/json',
            success: function (d) {
                if (d > 0) {
                    alert("删除成功");
                    location.href = "http://localhost:61709/Hotboom/daigoudingdan";
                } else {
                    alert("删除失败");
                }
            }
        })
    }
</script>

