<script>
    $(function () {
        $.ajax({
            url: 'http://localhost:59152/api/GetStudent',
            type: 'get',
            contentType:'/application/json',
            success: function (d) {
                $(d).each(function () {
                    var str = "<tr>" +
                        "<td>" + this.goodName + "</td>" +
                        "<td>" + this.goodPrice + "</td>" +
                        "<td>" + this.goodNum + "</td>" +
                        "<td>" + this.goodColor + "</td>" +
                        "</tr >";
                    $("#tb").append(str);
                })
            }
        })
    })
</script>

